{
	"name": "@pixelium/wp-readme",
	"version": "2.0.5",
	"exports": "./wp-readme.ts",
	"publish": {
		"include": [
			"wp-readme.ts",
			"README.md",
			"LICENSE"
		],
		"exclude": [
			"tests/**",
			".github/**"
		]
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.0",
		"@std/path": "jsr:@std/path@^1.0.0"
	},
	"tasks": {
		"test": "deno test --allow-read --allow-write --allow-env tests/wp_readme_test.ts",
		"test:watch": "deno test --allow-read --allow-write --allow-env --watch tests/wp_readme_test.ts",
		"publish:check": "deno publish --dry-run",
		"publish": "deno publish",
		"format": "deno fmt",
		"lint": "deno lint"
	},
	"fmt": {
		"include": [
			"*.ts",
			"tests/**/*.ts",
			"*.yml",
			"*.md",
			"deno.json",
			"deno.lock"
		],
		"exclude": ["tests/document/**", ".github/**"],
		"lineWidth": 120,
		"indentWidth": 4,
		"useTabs": true
	},
	"lint": {
		"include": ["*.ts", "tests/**/*.ts"]
	}
}
